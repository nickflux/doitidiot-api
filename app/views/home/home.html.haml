%h1 Welcome to Do It Idiot
- if user_signed_in?
  = link_to('completed todos', completed_todos_path)
  = link_to('log out', destroy_user_session_path, :method => "delete")
- else
  = link_to('log in', new_user_session_path)
  = link_to('register', new_user_registration_path)

- if user_signed_in?
  = form_for @new_todo do |f|
    = f.text_field :what_to_do
    = f.submit 'Create Todo', :data => {:url => todos_path}
    
%ul#todos.list_todos{:"data-sort-url" => sort_todos_url}


%script{:type => "text/html", :id  => "todo_template"}
  = render 'todos/todo_li'
%script{:type => "text/html", :id  => "edit_todo_template"}
  = render 'todos/edit_todo_li'