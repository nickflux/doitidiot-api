!!! 5
%html{:manifest => "/application.manifest"}
  %head
    %title DoitidiotApi
    = stylesheet_link_tag "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1.0" }
    %link{"rel" => "shortcut icon", "href" => "/assets/favicon.ico"}
    %link{"rel" => "apple-touch-icon", "href" => "/assets/apple-touch-icon.png"}
    
  %body
    .navbar
      .navbar-inner
        .container
          = link_to(image_tag("main_logo.gif"), root_path, :class => "brand")
          %ul.nav
            - if user_signed_in?
              %li= link_to('log out', destroy_user_session_path, :method => "delete")
              %li= link_to('my info', idiot_path)
            %li= link_to('FAQs', faqs_path)
  
    .container
      .row-fluid
        .span12
          - if notice
            .alert.alert-success
              %a.close{:"data-dismiss" => "alert"} Ã—
              = notice
          = yield
          
    #footer.container
      .row-fluid
        %ul#footer_nav.span10
          %li
            = link_to("Contact Us", "mailto:mail@doitidiot.com")
          %li
            = link_to("Terms & Conditions", terms_and_conditions_path)
        #copyright.span2
          &copy; DoItIdiot Ltd 2012